generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketStatus {
  TODO
  DOING
  PAUSED
  DONE
}

enum TicketPriority {
  HIGH
  MEDIUM
  NONE
}

enum TicketEventType {
  CREATED
  STATUS_CHANGED
  PAUSED
  COMMENT
  NOTE
  ASSIGNED
  SLA_UPDATED
  UPDATED
}

enum Role {
  ADMIN
  AGENT
  CUSTOMER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   @default("default_hash")
  role      Role     @default(AGENT)
  tickets   Ticket[] @relation("OperatorTickets")
  events    TicketEvent[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ticket {
  id            String         @id @default(cuid())
  number        Int            @unique @default(autoincrement())
  company       String
  requester     String
  subject       String
  description   String?
  status        TicketStatus   @default(TODO)
  priority      TicketPriority @default(NONE)
  
  // Legacy string field, keeping for compatibility during migration
  operator      String?
  
  // Relation to User model
  operatorId    String?
  operatorUser  User?          @relation("OperatorTickets", fields: [operatorId], references: [id])
  
  contact       String?
  ticketType    String?
  category      String?
  workbench     String?
  responseSlaAt DateTime?
  solutionSlaAt DateTime?
  pausedReason  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  events        TicketEvent[]

  @@index([status])
  @@index([priority])
  @@index([createdAt])
}

model TicketEvent {
  id          String          @id @default(cuid())
  ticketId    String
  ticket      Ticket          @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  type        TicketEventType
  title       String
  description String?
  fromStatus  TicketStatus?
  toStatus    TicketStatus?
  pauseReason String?
  metadata    Json?
  
  // Legacy string field
  author      String?
  
  // Relation to User model
  authorId    String?
  authorUser  User?           @relation(fields: [authorId], references: [id])
  
  createdAt   DateTime        @default(now())

  @@index([ticketId, createdAt])
  @@index([type])
}
