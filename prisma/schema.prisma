generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public", "users"]
}

enum TicketStatus {
  TODO
  DOING
  PAUSED
  DONE

  @@schema("public")
}

enum TicketPriority {
  HIGH
  MEDIUM
  NONE

  @@schema("public")
}

enum TicketEventType {
  CREATED
  STATUS_CHANGED
  PAUSED
  COMMENT
  NOTE
  ASSIGNED
  SLA_UPDATED
  UPDATED

  @@schema("public")
}

model Ticket {
  id            String         @id @default(cuid())
  number        Int            @unique @default(autoincrement())
  company       String
  requester     String
  subject       String
  description   String?
  status        TicketStatus   @default(TODO)
  priority      TicketPriority @default(NONE)
  operator      String?
  contact       String?
  ticketType    String?
  category      String?
  workbench     String?
  responseSlaAt DateTime?
  solutionSlaAt DateTime?
  pausedReason  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  events        TicketEvent[]

  @@index([status])
  @@index([priority])
  @@index([createdAt])
  @@schema("public")
}

model TicketEvent {
  id          String          @id @default(cuid())
  ticketId    String
  ticket      Ticket          @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  type        TicketEventType
  title       String
  description String?
  fromStatus  TicketStatus?
  toStatus    TicketStatus?
  pauseReason String?
  metadata    Json?
  author      String?
  createdAt   DateTime        @default(now())

  @@index([ticketId, createdAt])
  @@index([type])
  @@schema("public")
}
